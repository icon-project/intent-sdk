{
  "name": "@iconproject/intents-sdk",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Icon Project Intents SDK",
  "keywords": ["intents-sdk"],
  "homepage": "https://github.com/icon-project/intent-sdk",
  "bugs": {
    "url": "https://github.com/icon-project/intent-sdk/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/icon-project/intent-sdk"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "dev": "vitest",
    "ci": "npm run pretty && npm run build && npm run check-exports && npm run test",
    "pretty": "biome format . --write",
    "checkTs": "tsc --noEmit",
    "lint": "biome lint .",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "prepublishOnly": "npm run ci",
    "local-release": "changeset version && changeset publish"
  },
  "files": ["dist"],
  "type": "module",
  "dependencies": {
    "@mysten/sui": "^1.14.1",
    "@mysten/wallet-standard": "^0.13.16",
    "bignumber.js": "9.0.1",
    "icon-sdk-js": "1.5.3",
    "rlp": "3.0.0",
    "tiny-invariant": "1.3.3",
    "viem": "^2.21.35"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@arethetypeswrong/cli": "^0.16.4",
    "@changesets/cli": "^2.27.9",
    "@types/node": "^22.9.3",
    "typescript": "5.5.4",
    "vitest": "^2.1.3"
  }
}
